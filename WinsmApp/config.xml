<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="003" id="com.devru.smartrade" version="0.26" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Smartrade</name>
    <description>
        Solicitudes
    </description>
    <author email="devru@developer.ru.com" href="http://ru.com">
        DevRu
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <!-- nuevo 19-10-26 -->
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />    
    <allow-navigation href="tel:*" />
    <allow-navigation href="sms:*" />
    <allow-navigation href="mailto:*" />    
    <allow-navigation href="geo:*" />    
    <platform name="android">
        <access origin="*" />
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="21" />
        <preference name="android-targetSdkVersion" value="29" />
        <preference name="android-installLocation" value="auto" />
        <preference name="Fullscreen" value="false" />
        <preference name="Orientation" value="portrait" />
        <preference name="android-signed" value="true" />
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="SplashMaintainAspectRatio" value="false" />
        <preference name="debuggable" value="true" />
        <splash density="port-ldpi" platform="android" src="package-assets/SPLASH SCREENS/320X426.png" />
        <splash density="port-mdpi" platform="android" src="package-assets/SPLASH SCREENS/320X470.png" />
        <splash density="port-hdpi" platform="android" src="package-assets/SPLASH SCREENS/480X640.png" />
        <splash density="port-xhdpi" platform="android" src="package-assets/SPLASH SCREENS/720X960.png" />
        <splash density="land-ldpi" platform="android" src="package-assets/SPLASH SCREENS/426x320.png" />
        <splash density="land-mdpi" platform="android" src="package-assets/SPLASH SCREENS/470x320.png" />
        <splash density="land-hdpi" platform="android" src="package-assets/SPLASH SCREENS/640x480.png" />
        <splash density="land-xhdpi" platform="android" src="package-assets/SPLASH SCREENS/960X720.png" />
        <icon density="ldpi" src="package-assets/ICONS/icon_36.png" width="36" />
        <icon density="mdpi" src="package-assets/ICONS/icon_48.png" width="48" />
        <icon density="hdpi" src="package-assets/ICONS/icon_72.png" width="72" />
        <icon density="xhdpi" src="package-assets/ICONS/icon_96.png" width="96" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="KeyboardResize" value="false" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="android-build-tool" value="gradle" />
    <platform name="ios">
        <!-- nuevo 19-10-26 -->
        <preference name="websecurity" value="disable" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <plugin name="cordova-plugin-call-number" spec="^1.0.1" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <engine name="android" spec="^7.0.0" />
</widget>
